{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": ["node"],

  "exclude": [
    "coverage",
    "node_modules",
    "!node_modules/@types",
    "packages/angular-imask",
    "packages/imask/test/",
    "packages/react-native-imask",
    "packages/react-imask/",
    "packages/solid-imask/",
    "packages/svelte-imask/",
    "packages/vue-imask/",
    "**/*.js"
  ]
}